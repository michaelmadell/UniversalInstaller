<UserControl x:Class="UniversalInstaller.Wizard.Pages.ReadyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid Background="White" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Ready to Install"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Setup is ready to begin installation."
                          TextWrapping="Wrap"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Installation Summary:"
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>

                <Border BorderBrush="Gray"
                       BorderThickness="1"
                       Padding="15"
                       Background="#F9F9F9">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Application: "
                                     FontWeight="Bold"
                                     Width="120"/>
                            <TextBlock x:Name="AppNameText"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Version: "
                                     FontWeight="Bold"
                                     Width="120"/>
                            <TextBlock x:Name="VersionText"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Install Location: "
                                     FontWeight="Bold"
                                     Width="120"/>
                            <TextBlock x:Name="LocationText" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Publisher: "
                                     FontWeight="Bold"
                                     Width="120"/>
                            <TextBlock x:Name="PublisherText"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Text="Click Next to begin the installation."
                          TextWrapping="Wrap"
                          Margin="0,20,0,0"
                          Foreground="Gray"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
