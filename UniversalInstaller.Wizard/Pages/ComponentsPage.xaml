<UserControl x:Class="UniversalInstaller.Wizard.Pages.ComponentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid Background="White" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Select Components"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1"
                   Text="Select the components you want to install, and clear the components you do not want to install."
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1">
            <ListBox x:Name="ComponentsListBox"
                     SelectionMode="Multiple"
                     Background="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <CheckBox Content="{Binding Name}"
                                      IsChecked="{Binding IsSelected}"
                                      FontWeight="Bold"
                                      Margin="5"/>
                            <TextBlock Text="{Binding Description}"
                                       Margin="25,0,5,10"
                                       TextWrapping="Wrap"
                                       Foreground="Gray"
                                       FontSize="11"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
